        android:id="@+id/cv_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_slab_bold"
            android:gravity="right"
            android:text="--"
            android:textColor="@color/ace_theme_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/imageViewProduct"
            app:layout_constraintStart_toStartOf="@+id/tv_product_origin"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_origin" />

